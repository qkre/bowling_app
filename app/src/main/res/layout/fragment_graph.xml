<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:layout_gravity="center"
    tools:context=".GraphFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:text="2023년 4월 15일"
                android:id="@+id/today"/>

            <Button
                android:id="@+id/btn_day_mod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btn_day_clear"
                android:layout_marginHorizontal="10dp"
                android:text="수정"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btn_day_clear"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="초기화"
                android:textSize="20sp" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:id="@+id/juhyeon_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="박주현"
                android:textSize="26sp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/juhyeon_tv_WDL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0승 0무 0패"
                android:textSize="26sp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="볼링에 쓴 금액 : 0원"
                android:textSize="26sp"
                android:layout_weight="1"
                android:id="@+id/juhyeon_tv_sum"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="박제현"
                android:textSize="26sp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/jehyeon_tv_WDL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0승 0무 0패"
                android:textSize="26sp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="볼링에 쓴 금액 : 0원"
                android:textSize="26sp"
                android:layout_weight="1"
                android:id="@+id/jehyeon_tv_sum"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정석영"
                android:textSize="26sp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/seokyoung_tv_WDL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0승 0무 0패"
                android:textSize="26sp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="볼링에 쓴 금액 : 0원"
                android:textSize="26sp"
                android:layout_weight="1"
                android:id="@+id/seokyoung_tv_sum"/>


        </LinearLayout>

        <CalendarView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:id="@+id/caledarView"/>



    </LinearLayout>

</ScrollView>